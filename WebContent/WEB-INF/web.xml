<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  
	<display-name>viewmaster</display-name>
	
	<welcome-file-list>
		<welcome-file>/views/login/index.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
        <servlet-name>TelaDeLogin</servlet-name>
        <jsp-file>/views/login/login.jsp</jsp-file>
        </servlet>
    <servlet-mapping>
        <servlet-name>TelaDeLogin</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
	
	<servlet> 
		<servlet-name>LoginDeUsuario</servlet-name> 
		<servlet-class>servlet.LoginUsuario</servlet-class> 
	</servlet>
	<servlet-mapping> 
		<servlet-name>LoginDeUsuario</servlet-name> 
		<url-pattern>/LogarUsuario</url-pattern> 
	</servlet-mapping>
	
	<servlet>
        <servlet-name>TelaRecuperarSenhaExplicacao</servlet-name>
        <jsp-file>/views/login/recuperar_senha_explicacao.jsp</jsp-file>
        </servlet>
    <servlet-mapping>
        <servlet-name>TelaRecuperarSenhaExplicacao</servlet-name>
        <url-pattern>/RecuperarSenhaExplicacao</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>TelaRecuperarSenhaPassoUm</servlet-name>
        <jsp-file>/views/login/recuperar_senha_passo_um.jsp</jsp-file>
        </servlet>
    <servlet-mapping>
        <servlet-name>TelaRecuperarSenhaPassoUm</servlet-name>
        <url-pattern>/RecuperarSenhaPassoUm</url-pattern>
    </servlet-mapping>
	
	<error-page> 
		<exception-type>java.lang.Exception</exception-type> 
		<location>/views/login/index.jsp</location> 
	</error-page> 
	
	<error-page> 
		<error-code>404</error-code> 
		<location>/views/login/index.jsp</location> 
	</error-page>

</web-app>